### Quick Permissions (Preserved + Enhanced)
alias mx='chmod a+x'                         # PRESERVED - Make executable
alias 000='chmod 000'                        # PRESERVED - None
alias 644='chmod 644'                        # PRESERVED - User read/write
alias 666='chmod 666'                        # PRESERVED - All read/write
alias 755='chmod 755'                        # PRESERVED - User all, group/other read/execute
alias 777='chmod 777'                        # PRESERVED - All all

### Advanced Permissions
alias perm-exec='chmod +x'                   # Add execute permission
alias perm-read='chmod +r'                   # Add read permission
alias perm-write='chmod +w'                  # Add write permission
alias perm-none='chmod -rwx'                 # Remove all permissions
alias perm-sticky='chmod +t'                 # Set sticky bit
alias perm-suid='chmod +s'                   # Set SUID bit
alias perm-sgid='chmod +s'                   # Set SGID bit

### Ownership Operations (Enhanced)
alias chown='sudo chown --preserve-root'     # PRESERVED - Prevent root ownership change
alias chmod='sudo chmod --preserve-root'     # PRESERVED - Prevent root permission change
alias www='sudo chown www-data:www-data'     # PRESERVED - Web server ownership
alias own='sudo chown $USER:$USER'           # PRESERVED - Take ownership

### Advanced Ownership
alias chown-recursive='sudo chown -R'        # Recursive ownership change
alias chgrp='sudo chgrp'                     # Change group ownership
alias chgrp-recursive='sudo chgrp -R'        # Recursive group change
alias take-own='sudo chown -R $USER:$USER'   # Take ownership of directory tree

### Permission Queries
alias perm-show='ls -l'                      # Show permissions
alias perm-octal='stat -c "%a %n"'           # Show octal permissions
alias perm-who='ls -l | awk "{print \$1, \$3, \$4, \$9}"' # Show owner/group for files

