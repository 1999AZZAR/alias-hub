# ==============================================================================
# FILE SIZE & ORGANIZATION ANALYSIS
# ==============================================================================

### Size Analysis (Enhanced)
alias count='wc -l'                          # PRESERVED - Count lines
alias dus='du -sh * | sort -h'               # PRESERVED - Sort by human-readable size
alias dirsize='du -sh * | sort -hr'          # PRESERVED - Directory sizes, sorted

### Advanced Size Operations
alias du-sort='du -sh * | sort -h'           # Sort directories by size
alias du-human='du -h'                       # Human readable sizes
alias du-total='du -shc *'                   # Total size with summary
alias df-human='df -h'                       # Disk free in human readable
alias df-inodes='df -i'                      # Show inode usage

### File Analysis
alias newest='find . -type f -printf "%T@ %p\n" | sort -n | tail -10 | cut -f2- -d" "'  # PRESERVED - 10 newest files
alias oldest='find . -type f -printf "%T@ %p\n" | sort -n | head -10 | cut -f2- -d" "'  # PRESERVED - 10 oldest files
alias largest='find . -type f -exec ls -lh {} \; | sort -k5 -hr | head -10'              # 10 largest files
alias smallest='find . -type f -exec ls -lh {} \; | sort -k5 -h | head -10'             # 10 smallest files

### Duplicate Detection
alias dups='find . -type f -exec md5sum {} \; | sort | uniq -d -w32'                    # PRESERVED - Find duplicate files
alias dups-names='find . -type f -exec basename {} \; | sort | uniq -d'                # Find files with duplicate names
alias dups-size='find . -type f -size $(stat -c%s "$1") ! -path "$1" -exec ls -lh {} \;' # Find same size files

