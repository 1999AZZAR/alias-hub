# ==============================================================================
# BACKUP & RECOVERY
# ==============================================================================

### Backup Operations
alias backup-file='cp --backup=numbered'     # Create numbered backup
alias backup-dir='rsync -av --backup --backup-dir=.backup' # Backup directory
alias backup-incremental='rsync -av --link-dest=../backup-last .' # Incremental backup

### Recovery Operations
alias restore-file='cp --backup=numbered --reverse' # Restore from backup
alias diff-backup='diff --recursive --brief' # Compare with backup

### Version Control Integration
alias git-backup='git add . && git commit -m "Backup $(date)"' # Git-based backup
alias git-restore='git checkout'             # Restore from git

